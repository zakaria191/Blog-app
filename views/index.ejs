<div class="author">
    <h1 class="author-heading">NODE BLOG</h1>
    <p class="author-body">Your Imagination Is The Limit</p>
</div>

<img src="/img/3d-abstract-wave-pattern-background_53876-104422.avif" alt="blog img" width="981" height="528">

<section class="articles">
    <h2 class="articles-heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(element => { %>
          <li>
            <a href="/post/<%= element._id %>">
              <span><%= element.title %></span>
              <span class="article-list__date"><%= element.createdAt.toDateString() %></span>
            </a>
          </li>
        <% }) %>
      </ul>

      <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
      <% } %>


    

</section>